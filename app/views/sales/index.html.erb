<% title "Lista de Ventas" %>
<h1>Lista de Ventas</h1>

<h3><%= link_to 'Nueva Venta', new_sale_path, :class => 'btn btn-success' %></h3>
<%= link_to_function "Buscar", "$('#hide').toggle()" %><br>
<div id="hide" style="display:none">
<br>
<form method="GET" action="/sales/search">
Codigo: <input type="text" name="name"> &nbsp;&nbsp;&nbsp;
<input type="submit" value="Buscar">
</form>
</div>

<CENTER>

<table class="table table-striped">
    <thead>
        <tr>
            <th><Center>Nombre del cliente</Center></th>
            <th><Center>Numero factura</Center></th>
            <th><Center>Precio</Center></th>
            <th></th>       
            <th></th>       
            <th></th>       
            <th></th>       
            <th></th>       
        </tr>
    </thead>
    <tbody>
        <% @sales.each do |sale| %>
            <tr>
                <td><CENTER><%= sale.client_name %></CENTER></td>
                <td><CENTER><%= sale.check_number%></CENTER></td>
                <td><CENTER><%= sale.price %></CENTER></td>
                <td><%= link_to 'Ver', sale, :class => 'btn btn-mini'  %></td>
                <td><%= link_to 'Editar', edit_sale_path(sale), :class => 'btn btn-mini'  %></td>
                <td><%= link_to 'Eliminar', sale_path(sale), method: :delete, data: { confirm: 'Seguro?' }, :class => 'btn btn-mini btn-danger' %></td>
            </tr>
        <% end %>
    </tbody>
</table>
<br>
</Center>
