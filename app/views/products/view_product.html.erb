
<% title @product.name %>
<CENTER>

<H1><%= @product.name %> </H1>

<%if @product.photo_file_name == nil%>
  <small >Fotografia Aun no cargada</small><br>
  <%else%>

<div class="container" color="blue" position="center">
	<div class="row" position="center">
			<div class="span6">
			<p class="text-left">
			  <strong> Fotografia</strong><br><br>
				<%= image_tag @product.photo.url, size: "280x280" , :class => 'img-rounded' %>
			</p>
		<%end%>
		</div>  
		
			<div class="span4">
				<blockquote>
				    <strong>Descripcion:</strong><br><br>
				    <% @product.description.split.each do |palabra|%>
				    	<p align="left"><%= palabra %></p></br>
				    <%end%>
				</p>
				</blockquote>
			</div>
		
	</div>
</div>
<%= button_to 'Volver', :controller => :products, :action => 'products_home', :class => 'btn btn-info' %>
  
  </CENTER>
