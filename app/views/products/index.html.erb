<h1>Todos Los Productos</h1>


<CENTER>
<table border="1">
  <tr>
    <th>Nombre</th>
    
    <th>Detalle</th>
    
    <th>Descripcion</th>
    
    <th>Codigo Especifico del Producto</th>

    <th>Codigo General del Producto</th>

    <th>Marca</th>

    <th>Categoria</th>

    <th>Precio De Compra</th>

	<th>Precio De Venta</th>        
  </tr>
<% @products.each do |product| %>
  <tr>
    <td><CENTER><%= product.name %></CENTER></td>
    
    <td><CENTER><%= product.detail %></CENTER></td>
    
    <td><CENTER><%= product.description %></CENTER></td>
    
    <td><CENTER><%= product.quantity %></CENTER></td>

    <td><CENTER><%= product.general_code %></CENTER></td>

    <td><CENTER><%= product.brand %></CENTER></td>

    <td><CENTER><%= product.category %></CENTER></td>

    <td><CENTER><%= product.bought_price %></CENTER></td>

    <td><CENTER><%= product.sale_price %></CENTER></td>
   
    <td><%= link_to 'Ver', product %></td>
    <td><%= link_to 'Editar', edit_product_path(product) %></td>
    <td><%= link_to 'Eliminar', product_path(product),
                    method: :delete, data: { confirm: 'Seguro?' } %></td>
  </tr>
<% end %>
</table>
<br>
</Center>