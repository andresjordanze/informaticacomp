<% title @product.name %>
<CENTER><H1><%= @product.name %> </H1>

<p>
    
    <strong>Detalle:</strong><br>    
    
          <% @product.detail.split.each do |palabra|%>
                            <%= palabra %></br>
                        <%end%>
    
    
</p>

<p>    
    <strong>Cantidad</strong><br>
    <%= @product.quantity %>
</p>

<p>
    <strong>Codigo del producto: </strong><br>
    <%= @product.general_code %>
</p>

<p>
    <strong>Marca: </strong><br>
    <%= @product.brand %>
</p>

<p>
    <strong>Categoria: </strong><br>
    <%= @product.category %>
</p>

 
<!--<p>
    <strong>Precio de Compra:</strong><br>
    <%= @product.bought_price %>
</p>-->

<p>
    <strong>Precio de venta: </strong><br>
    <%= @product.sale_price %>
</p>    
<%= button_to 'Editar', edit_product_path(@product), :class => 'btn btn-primary',:method => :get %><br>
<%= button_to 'Volver', products_path, :method => :get, :class => 'btn btn-primary' %><br>

  </CENTER>
 