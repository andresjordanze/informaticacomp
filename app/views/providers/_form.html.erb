<%= form_validated_for(@provider) do |f| %>
<CENTER>
  <p>
    <%= f.label :name, "Nombre de Proveedor" %>
    <%= f.text_field :name,:maxlength => '20' %>
  </p>

  <p>
    <%= f.label :mail, "Email" %>
    <%= f.text_field :mail,:maxlength => '30' %>
  </p>

  <p>
    <%= f.label :phone, "Telefono" %>
    <%= f.text_field :phone,:maxlength => '8' %>
  </p>

  <p>
    <%= f.label :country, "Locacion" %>
    <%= f.text_field :country,:maxlength => '20' %>
  </p>
  
  <p><%= f.submit (@provider.new_record? ? 'Agregar Proveedor' : 'Guardar Cambios'), :class => 'btn btn-lg btn-success' %></p>
<% end %>
</CENTER>