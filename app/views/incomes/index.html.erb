<% title "Ingresos" %>
<h1>Reporte de ingresos</h1>

<table class="table table-striped">
    <thead>
      <tr>
        <th>Numero de pedido</th>
        <th>Nombre</th>
        <th>Codigo</th>
        <th>Descripcion</th>
        <th>Cantidad</th>
        <th>Precio Unit.</th>
        <th>Precio total</th>
        <th>Fecha de ingreso</th>
      </tr>
      </thead>
      <tbody>

    <% @incomes.each do |income| %>
      <tr class="info">
        <td><%= income.id_order%></td>
        <td><%= income.product_name %></td>
        <td><%= income.code %></td>
        <td><%= income.description %></td>
        <td><%= income.quantity %></td>
        <td><%= income.price %></td>
        <td><%= income.total_price %></td>
        <td><%= income.created_at.strftime("%d/%m/%Y") %></td>
      </tr>
    <% end %>
    </tbody>
</table>