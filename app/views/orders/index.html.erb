<% title "Lista de pedidos" %>
<h1>Lista de pedidos</h1>

<h3><%= link_to 'Agregar pedido', new_order_path, :class => 'btn btn-success' %></h3>

<CENTER>

<table class="table table-striped">
    <thead>
        <tr>
            <th><Center>Numero de pedido</Center></th>
            <th><Center>Fecha</Center></th>
            <th><Center>Producto</Center></th>   
        </tr>
    </thead>
    <tbody>
        <% @orders.each do |order| %>
            <tr>
                <td><CENTER><%= order.numero_pedido %></CENTER></td>
                <td><CENTER><%= order.created_at %></CENTER></td>
                <td><CENTER><%= order.nombre_producto %></CENTER></td>
                <td><%= link_to 'Ver', order, :class => 'btn btn-mini'  %></td>
                <td><%= link_to 'Eliminar', order_path(order), method: :delete, data: { confirm: 'Seguro?' }, :class => 'btn btn-mini btn-danger' %></td>
                <td><%= link_to 'Registrar ingreso', :controller => :products, :action => "new", :id => order.id %></td>
            </tr>
        <% end %>
    </tbody>
</table>
<br>
</Center>
