<% title "Usuarios" %>
<h1>Lista de Usuarios</h1>

<table>
  <tr>
    <th>Nombre Completo</th>
    <th>Nombre de Usuario</th>
    <th>Rol</th>
    <th>Fecha Creacion</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td><%= user.rol %></td>
    <td><%= user.created_at %></td>
    <% if current_user.username != user.username %>
    <td><%= button_to 'Eliminar Usuario', user_path(user),method: :delete, data: { confirm: 'Seguro?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>
</br>
<%= button_to 'Crear Usuario', :controller => :users, :action => 'create' %>